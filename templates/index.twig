{% extends "base.twig" %}

{% block content %}
  {% for post in posts %}
    {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
  {% endfor %}

  {% if pagination %}
    <div class="pagination">
      {% if pagination.next %}
      <div class="col">
        <a href="{{ pagination.next.link }}" class="button">Older</a>
      </div>
      {% endif %}

      {% if pagination.prev %}
      <div class="col">
        <a href="{{ pagination.prev.link }}" class="button">Newer</a>
      </div>
      {% endif %}
    </div>
  {% endif %}
{% endblock %}
