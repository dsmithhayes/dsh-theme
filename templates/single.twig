{% extends "base.twig" %}

{% block content %}
  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section class="article-content">
      <h1 class="article-h1">{{post.title}}</h1>
      <p class="blog-author">
        Posted by {{ post.author.name }} </a> on {{ post.post_date|date}}
      </p>
      <div class="article-body">
        {{post.content}}
      </div>
    </section>
  </article>

  <div class="pagination">
    {% if post.prev %}
      <div class="col">
        <a href="{{ post.prev.link }}" class="button">Newer: {{ post.prev.title }}</a>
      </div>
    {% endif %}
    {% if post.next %}
      <div class="col">
        <a href="{{ post.next.link }}" class="button">Older: {{ post.next.title }}</a>
      </div>
    {% endif %}
  </div>
{% endblock %}

{% block prefooter %}
  <section class="to-top">
    <a href="#">To Top</a>
  </section>
{% endblock %}
